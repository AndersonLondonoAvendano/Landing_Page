---
import features from '../../data/features.json';
---

<h1 class="text-center font-bold text-5xl mt-10 mb-16 text-white">Security Features</h1>
<div class="grid md:grid-cols-3 gap-8 px-8 max-w-7xl mx-auto">
    {
        features.map((feature) => (
            <div class="bg-gray-800 p-8 rounded-xl shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-2">
                <!-- Icono representativo -->
                <div class="text-center mb-6">
                    <img
                        src={feature.image}
                        class="w-16 h-16 mx-auto"
                    />
                </div>

                
                <h2 class="text-2xl font-bold text-white mb-4">{feature.title}</h2>
                <p class="text-gray-300">{feature.description}</p>

                
                <button class="mt-6 px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-all">
                    More Info
                </button>
            </div>
        ))
    }
</div>